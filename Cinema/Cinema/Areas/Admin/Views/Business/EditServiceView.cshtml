@{
    ViewBag.Title = "OREGON Quản lý | Kinh doanh";
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h5 class="ml-4 mt-4">SỬA DỊCH VỤ</h5>
<div class="content-title-line card-nhansu ml-4"></div>
<div class="container">
    <div class="modal-body">
        <form action="/Admin/Business/EditService?id=@ViewBag.ServiceID" method="post" class="d-flex justify-content-center flex-column needs-validation" novalidate>
            <div class="row form-group">
                <label class="col-4" for="service_ID">Tên loại dịch vụ</label>
                <div class="d-flex flex-column col-8 p-0">
                    <input class="p-2" type="text" id="service_name" name="service_name" value="@ViewBag.service.ServiceName" />
                </div>
            </div>
            <div class="row form-group">
                <label class="col-4" for="service_price">Giá loại dịch vụ</label>
                <div class="d-flex flex-column col-8 p-0">
                    <input class="p-2" type="text" id="service_price" name="service_price" value="@ViewBag.service.ServicePrice" />
                </div>
            </div>

            <div class="row justify-content-end">
                <button type="submit" class="btn btn-lg card-kinhdoanh text-light mr-3">Lưu</button>
                <a href="/Admin/Business/Business" type="button" class="btn btn-lg btn-light mr-3">Hủy</a>
            </div>
        </form>
    </div>
</div>
<script>
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            var forms = document.getElementsByClassName('needs-validation');
            var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>
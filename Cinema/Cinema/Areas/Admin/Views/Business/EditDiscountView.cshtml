@{
    ViewBag.Title = "OREGON Quản lý | Kinh doanh";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h5 class="ml-4 mt-4">SỬA MÃ GIẢM GIÁ</h5>
<div class="content-title-line card-nhansu ml-4"></div>
<div class="container">
    <div class="modal-body">
        <form action="/Admin/Business/EditDiscount?id=@ViewBag.DiscountID.ToString()" method="post" class="d-flex justify-content-center flex-column needs-validation" novalidate>
            <div class="row form-group">
                <label class="col-4" for="discount_ID">Mã giảm giá</label>
                <div class="d-flex flex-column col-8 p-0">
                    <input class="p-2" type="text" id="discount_ID" name="discount_ID" value="@ViewBag.discount.CodeID" / disabled>
                </div>
            </div>
            <div class="row form-group">
                <label class="col-4" for="discount_t">% giảm giá</label>
                <div class="d-flex flex-column col-8 p-0">
                    <input class="p-2" type="text" id="discount_t" name="discount_t" value="@ViewBag.discount.DiscountNumber" />
                </div>
            </div>
            <div class="row form-group">
                <label class="col-4" for="discount_stt">Trạng thái</label>
                <div class="d-flex flex-column col-8 p-0">
                    <input class="p-2" type="text" id="discount_stt" name="discount_stt" value="@ViewBag.discount.State" />
                </div>
            </div>

            <div class="row justify-content-end">
                <button type="submit" class="btn btn-lg card-kinhdoanh text-light mr-3">Lưu</button>
                <a href="/Admin/Business/Business" type="button" class="btn btn-lg btn-light mr-3">Hủy</a>
            </div>
        </form>
    </div>
</div>
<script>
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            var forms = document.getElementsByClassName('needs-validation');
            var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>